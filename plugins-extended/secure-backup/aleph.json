{
  "$schema": "https://aleph.network/schemas/aleph-extension-v1.json",
  "type": "aleph-extension",
  "alephVersion": "1.0.0",
  "capabilities": {
    "skillProvider": true,
    "dsnEnabled": true,
    "semanticDomain": "temporal"
  },
  "skills": [
    {
      "name": "backup_data",
      "description": "Create an encrypted backup of application data",
      "executionLocation": "CLIENT"
    },
    {
      "name": "restore_backup",
      "description": "Restore data from an encrypted backup",
      "executionLocation": "CLIENT"
    }
  ],
  "permissions": [
    "dsn:register-tool",
    "fs:read",
    "fs:write",
    "store:read",
    "store:write"
  ]
}
