{
  "id": "@alephnet/voice-suite",
  "version": "1.0.0",
  "name": "Voice Suite",
  "description": "Comprehensive voice interface combining ElevenLabs and OpenAI capabilities for TTS, STT, and voice cloning.",
  "author": "AlephNet",
  "license": "MIT",
  "main": "dist/index.js",
  "renderer": "renderer/bundle.js",
  "icon": "icon.svg",
  "permissions": [
    "network:http",
    "fs:read",
    "fs:write",
    "store:read",
    "store:write",
    "dsn:register-tool",
    "ui:audio",
    "audio:record",
    "audio:play"
  ],
  "semanticDomain": "creative",
  "aleph": {
    "capabilities": {
      "skillProvider": true,
      "dsnEnabled": true,
      "semanticDomain": "creative"
    },
    "tools": [
      {
        "name": "text_to_speech",
        "description": "Convert text to speech using ElevenLabs or OpenAI",
        "executionLocation": "SERVER"
      },
      {
        "name": "transcribe_audio",
        "description": "Convert audio to text (STT) using OpenAI Whisper",
        "executionLocation": "SERVER"
      },
      {
        "name": "get_voices",
        "description": "List available voices from providers",
        "executionLocation": "SERVER"
      },
      {
        "name": "clone_voice",
        "description": "Clone a voice from audio samples (ElevenLabs)",
        "executionLocation": "SERVER"
      },
      {
        "name": "generate_sound_effect",
        "description": "Generate sound effects from text (ElevenLabs)",
        "executionLocation": "SERVER"
      }
    ],
    "settings": [
      {
        "key": "defaultProvider",
        "label": "Default Voice Provider",
        "type": "select",
        "default": "elevenlabs",
        "options": [
          { "value": "elevenlabs", "label": "ElevenLabs" },
          { "value": "openai", "label": "OpenAI" }
        ],
        "description": "Primary provider for Text-to-Speech"
      },
      {
        "key": "elevenlabsApiKey",
        "label": "ElevenLabs API Key",
        "type": "secret",
        "default": "",
        "description": "API key for ElevenLabs services"
      },
      {
        "key": "openaiApiKey",
        "label": "OpenAI API Key",
        "type": "secret",
        "default": "",
        "description": "API key for OpenAI audio services"
      },
      {
        "key": "elevenlabsDefaultVoiceId",
        "label": "ElevenLabs Default Voice ID",
        "type": "string",
        "default": "21m00Tcm4TlvDq8ikWAM",
        "description": "Default voice ID for ElevenLabs"
      },
      {
        "key": "openaiDefaultVoice",
        "label": "OpenAI Default Voice",
        "type": "select",
        "default": "alloy",
        "options": [
          { "value": "alloy", "label": "Alloy" },
          { "value": "echo", "label": "Echo" },
          { "value": "fable", "label": "Fable" },
          { "value": "onyx", "label": "Onyx" },
          { "value": "nova", "label": "Nova" },
          { "value": "shimmer", "label": "Shimmer" }
        ],
        "description": "Default voice for OpenAI"
      },
       {
        "key": "stability",
        "label": "Voice Stability (ElevenLabs)",
        "type": "number",
        "default": 0.5,
        "min": 0,
        "max": 1,
        "step": 0.1,
        "description": "Higher values make voice more consistent"
      },
      {
        "key": "similarityBoost",
        "label": "Similarity Boost (ElevenLabs)",
        "type": "number",
        "default": 0.75,
        "min": 0,
        "max": 1,
        "step": 0.1,
        "description": "Higher values make voice closer to original"
      }
    ]
  }
}
