{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": ["es2022", "dom"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "jsx": "react",
    "types": ["node", "jest"]
  },
  "include": ["main/**/*", "renderer/**/*", "tests/**/*", "src/**/*"],
  "exclude": ["node_modules", "dist"]
}
